<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="posts">
        <h1 class="text-zinc-400 text-3xl tracking-tighter">Feed</h1>
        <div class="postcontainer mt-10">
            <% feed.reverse().forEach(function(val){ %>
          <div class="feed w-1/3 p-4 mb-4 border-[1px] border-zinc-700 bg-zinc-800" >
            <h4 class="text-blue-500 mb-2"><%= val.user.username %></h4>
            <p class="text-sm tracking-tight">
              <%= val.content %>
            </p>
            <small class="mt-5 inline-block"><%= val.likes.length %> likes</small>
            <div class="btns gap-4 flex mt-1 ">
              <a href="/like/<%= val._id %>" class="text-blue-500">
                <%= val.likes.indexOf(val.user._id) === -1 ? 'like' : 'Unlike' %>
              </a>
              
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
