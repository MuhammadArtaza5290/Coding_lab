<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            type="text"
            class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800"
            placeholder="Write your task description"
            name="details"
          ></textarea>
          <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-md" />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
       <% if(files.length > 0){ %>
        <% files.forEach(function(val){ %>
        <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
          <div class="flex items-end justify-end">
            <a href="/editdetail/<%= val %>" class="text-zinc-500 hover:text-green-500 mx-4"
              ><i class="fa-solid fa-pen-to-square"></i
            ></a>
            <a
              href="/delete/<%= val %>"
              class="text-zinc-500 hover:text-red-500"
              title="Delete"
            >
              <i class="fa-solid fa-trash-can"></i>
            </a>
          </div>
             <h1 class="text-white text-3xl  tracking-tighter"><%= val %></h1>
             <div class="flex w-full justify-between items-center mt-3">
             <a href="/showFile/<%= val %>" class="text-blue-600 inline-block mt-3">Read More..</a>
             <a href="/edit/<%= val %>" class="text-zinc-600 inline-block mt-3">Edit FileName</a>
             </div>
            </div>
            <% }) %>
          <% } else{ %>
            <h3 class="text-zinc-600 text-3xl">No tasks yet</h3>
            <% } %>
      </div>
    </div>
  </body>
</html>
